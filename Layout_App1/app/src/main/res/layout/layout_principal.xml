<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/fundo_degrade">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opcao"
        android:textSize="38sp"
        android:textColor="@color/white"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">

        <TableRow
            android:layout_margin="15dp">
            <Button
                android:id="@+id/botao1"
                android:text="@string/botao1"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/botao2"
                android:text="@string/botao2"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
        </TableRow>

        <TableRow
            android:layout_margin="15dp">
            <Button
                android:id="@+id/botao3"
                android:text="@string/botao3"
                android:textSize="16sp"
                android:layout_marginEnd="15dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/botao4"
                android:text="@string/botao4"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"/>
        </TableRow>
    </TableLayout>
</LinearLayout>